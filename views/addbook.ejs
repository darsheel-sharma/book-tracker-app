<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>
<body>
    
    <%- include("./partials/sidebar.ejs") %>

    <div id="content">
        <div class="form-wrapper">
            <form class="styled-form" action="/addbook" method="POST">
                <div class="form-group">
                    <label for="title">Book Title</label>
                    <input type="text" id="title" name="title" class="form-input" placeholder="Enter the book title">
                </div>

                <div class="form-group">
                    <label for="author">Author Name</label>
                    <input type="text" id="author" name="author" class="form-input" placeholder="Enter the author's name">
                </div>

                <div class="form-group">
                    <label for="pages">No. of Pages</label>
                    <input type="number" id="pages" name="pages" class="form-input" placeholder="Enter the no. of pages">
                </div>

                <div class="form-group">
                    <label for="genre-select">Select Genre</label>
                    <select id="genre-select" name="genre">
                        <option value="Fiction">Fiction</option>
                        <option value="Non-fiction">Non-Fiction</option>
                        <option value="Fantasy">Fantasy</option>
                        <option value="Sci-fi">Sci-Fi</option>
                        <option value="Mystery">Mystery</option>
                        <option value="Thriller">Thriller</option>
                        <option value="Romance">Romance</option>
                        <option value="Historical-fiction">Historical Fiction</option>
                        <option value="Young-adult">Young Adult (YA)</option>
                        <option value="Children">Children's</option>
                        <option value="Graphic-novel">Graphic Novel</option>
                        <option value="Biography">Biography</option>
                        <option value="Autobiography">Autobiography</option>
                        <option value="Self-help">Self-Help</option>
                        <option value="Philosophy">Philosophy</option>
                        <option value="Psychology">Psychology</option>
                        <option value="Science">Science</option>
                        <option value="Technology">Technology</option>
                        <option value="History">History</option>
                        <option value="Poetry">Poetry</option>
                        <option value="Travel">Travel</option>
                        <option value="Spirituality">Spirituality</option>
                        <option value="Business">Business</option>
                        <option value="Economics">Economics</option>
                        <option value="Education">Education</option>
                        <option value="Politics">Politics</option>
                        <option value="Health">Health & Wellness</option>
                        <option value="Cookbook">Cookbooks</option>
                        <option value="Art">Art</option>
                        <option value="Humor">Humor</option>
                        <option value="Sports">Sports</option>
                    </select>
                    </div>
                <div class="form-group">
                    <div class="radio-group">Choose Status:
                        <label><input type="radio" name="bstatus" value="Reading"> Currently Reading</label>
                        <label><input type="radio" name="bstatus" value="Read"> Finished Reading</label>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="submit-btn">Add Book</button>
                </div>
            </form>
        </div>
    </div>
    <button id="sidebar-toggle" class="hamburger">
        <i class="fa-solid fa-bars"></i>
    </button>
    <script>
        const sidebarToggle = document.getElementById("sidebar-toggle");
        const sidebar = document.getElementById("sidebar");

        sidebarToggle.addEventListener("click", () => {
            sidebar.classList.toggle("active");
        });
    </script>
</body>
</html>